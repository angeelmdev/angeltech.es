{% extends 'base.html.twig' %}

{% block title %}Prueba Tailwind{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto p-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for i in 1..5 %}
    <div class="bg-white shadow-lg rounded-lg overflow-hidden flex">
        <!-- Imagen izquierda -->
        <div class="w-1/3">
            <img src="{{asset('images/cat.jpg')}}" alt="Imagen de prueba" class="h-full w-full object-cover">
        </div>
        <div class="w-2/3 p-4 flex flex-col justify-center">
            <h2 class="text-lg font-semibold mb-2">Título de la tarjeta {{ i }}</h2>
            <p class="text-gray-600">Este es un texto de prueba para la tarjeta {{ i }}. Aquí puedes poner cualquier descripción.</p>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
