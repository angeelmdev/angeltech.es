{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block body %}
<section class="bg-gray-50">
    <div class="flex flex-col items-center px-5 justify-center h-screen">
        <a href="/">
            <div class="flex items-center font-semibold text-gray-900 pb-10">      
                {% include 'components/logo-angeltech.twig' with { width: '50', color: '#000000' } %}
                <span class="self-center text-xl whitespace-nowrap">Ángel Moreno</span>
            </div>
        </a>
        <div class="w-full sm:max-w-md bg-white rounded-lg shadow-xl p-6">
            <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl mb-4">
                Iniciar sesión
            </h1>
            <form action="{{ path('login') }}" method="post" class="space-y-4">
                <div>
                    <label for="_username" class="block mb-2 text-sm font-medium text-gray-900">Correo electrónico</label>
                    <input type="email" name="_username" id="_username" value="{{ last_username|default('') }}" placeholder="nombre@example.com" required
                           class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                </div>
                <div>
                    <label for="_password" class="block mb-2 text-sm font-medium text-gray-900">Contraseña</label>
                    <input type="password" name="_password" id="_password" placeholder="••••••••••••" required
                           class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                </div>
                <button type="submit"
                        class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                    Iniciar sesión
                </button>
            </form>
        </div>
    </div>
</section>
{% endblock %}
