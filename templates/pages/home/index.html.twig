{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('cubes') }}
{% endblock %}

{% block title %}Prueba Tailwind{% endblock %}

{% block body %}
    {% include 'components/navbar.twig' %}

    {% include 'components/cube-background.twig' %}

    <div id="proyectos" class="text-center">
        <h1 class="px-10 pt-20 pb-5 text-4xl font-bold text-black">
            PROYECTOS
        </h1>
    </div>

    <div class="max-w-7xl mx-auto p-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for project in projects %}
            {% include 'components/card-project.twig' with {
                image: project.image,
                title: project.title,
                description: project.description
            } %}
        {% endfor %}
    </div>

    <div class="border-t my-10 border-gray-300 w-full"></div>

    <div id="contacto" class="text-center">
        <h1 class="px-10 pb-5 text-4xl font-bold text-black">
            CONTACTO
        </h1>
    </div>

    {% include 'components/social-box.twig' %}

    {% include 'components/footer.twig' %}
{% endblock %}
