<div class="max-w-sm rounded-lg shadow-lg bg-white border-gray-700">
    <img class="rounded-t-lg w-full h-48 object-cover" src="images/cat.jpg" alt="" />

    <div class="p-5">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-800">{{ title }}</h5>  
        <p class="mb-3 font-normal text-gray-800">{{ description }}</p>

        
        <div class="flex">
            <i class="fab fa-github mt-1.5 mr-2"></i>
            <a class="mb-3 font-normal text-blue-800" href="{{ urlGithub }}" target="_blank">{{ urlGithub }}</a>
        </div>
        <div class="flex">
            <i class="fa-solid fa-earth-europe mt-1.5 mr-2"></i>
            <a class="mb-3 font-normal text-blue-800" href="{{ url }}" target="_blank">{{ url }}</a>
        </div>
        <div class="flex justify-end">
            <button class="block p-2 text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none font-medium rounded-lg text-sm text-center" type="button">
                <i class="fa-solid fa-trash"></i>
            </button>
        </div>
    </div>
</div>